{
  "presets": ["es2015", "react", "es2017"],
  "plugins": [
    "lodash",
    "transform-runtime",
    "transform-decorators-legacy",
    "transform-class-properties",
    "react-hot-loader/babel",
    ["module-resolver", {
      "root": ["./"],
      "alias": {
        "@components": "./src/components",
        "@modules": "./src/modules",
        "@images": "./src/images",
        "@styles": "./src/styles"
      }
    }]
  ]
}
